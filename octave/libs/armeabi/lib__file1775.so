## System-wide startup file for Octave.
##
## This file should contain any commands that should be executed each
## time Octave starts for every user at this site.

warning ("off", "Octave:future-time-stamp");
warning ("off", "Octave:warn-future-time-stamp");
more off;
edit editor "/system/bin/am start -a android.intent.action.EDIT -t text/plain -d %s";
if (exist("/data/data/com.droidplot/share/gnuplot/4.6/gnuplotrc") == 2)
   setenv("TMPDIR","/data/data/com.droidplot/tmp");
   contents = fileread("/data/data/com.droidplot/share/gnuplot/4.6/gnuplotrc");
   setenv("GNUTERM",substr(contents,9));
   setenv("GDFONTPATH","/data/data/com.droidplot/share/fonts/");
   setenv("GNUPLOT_DEFAULT_GDFONT","LiberationMono-Regular.ttf");
   set(0,"defaultaxesfontname","LiberationMono-Regular");
   set(0,"defaulttextfontname","LiberationMono-Regular");
   register_graphics_toolkit("gnuplot");
else
   printf("Plotting non-functional, consider getting droidplot from the Play Store.\n");
endif
found_packages = 0;
if (exist("/data/data/com.octave/freeRoot/usr/local/lib/octave/packages/") == 7) 
   addpath(genpath("/data/data/com.octave/freeRoot/usr/local/lib/octave/packages/"));
   found_packages = 1;
endif
if (exist("/data/data/com.octave/freeRoot/usr/local/share/octave/packages/") == 7) 
   addpath(genpath("/data/data/com.octave/freeRoot/usr/local/share/octave/packages/"));
   found_packages = 1;
endif
if (found_packages == 0) 
   printf("No add-on packages found, get them from the Play Store.\n");
endif